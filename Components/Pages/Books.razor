@page "/books"

<div class="container">
    <div class="form-container">
        <h2>Input Form</h2>
        <form>
            <div class="form-group">
                <label>Title:</label>
                <input type="text" required>
            </div>
            <div class="form-group">
                <label>Author:</label>
                <input type="text" required>
            </div>
            <div class="form-group">
                <label>ISBN (10-digit or 13-digit ISBN):</label>
                <input type="text" pattern="\d{9}[\dXx]" required>
            </div>
            <div class="form-group">
                <label>Genre:</label>
                <input type="text" id="age" name="age" min="18" required>
            </div>
            <div class="form-group">
                <label>Publisher:</label>
                <input type="text" id="city" name="city" required>
            </div>
            <div class="form-group">
                <label>Publication Year:</label>
                <input type="number" min="0" max="9999" required>
            </div>
            <input type="submit" value="Add Book">
        </form>
    </div>

    <div class="data-display">
        <h2>Data Display</h2>
        <div class="data-item">
            <span class="data-label">Title:</span> The Hobbit
        </div>
        <div class="data-item">
            <span class="data-label">Author:</span> JRR. Tolkein
        </div>
        <div class="data-item">
            <span class="data-label">ISBN:</span> 123-456-7890
        </div>
        <div class="data-item">
            <span class="data-label">Genre:</span> Fantasy
        </div>
        <div class="data-item">
            <span class="data-label">Publisher:</span> Houghton Mifflin
        </div>
        <div class="data-item">
            <span class="data-label">Publication Year:</span> 1954
        </div>
    </div>
</div>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Genre</th>
            <th>Publisher</th>
            <th>Publication Year</th>
        </tr>
    </thead>
